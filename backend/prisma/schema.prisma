datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

model User {
  id Int @id @default(autoincrement())
  username String
  email String @unique
  avatarURL String @map("avatar_url")
}


model Pizzeria {
  id           Int    @id @default(autoincrement())
  memberNumber Int? @map("member_number")
  name         String
  nation       String
  address      String
  lat          Float
  lng          Float
  website      String?
}
