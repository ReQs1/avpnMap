datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output   = "./generated/client"
  moduleFormat = "cjs"
}

model User {
  id           Int          @id @default(autoincrement())
  username     String
  email        String       @unique
  avatarURL    String       @map("avatar_url")
  joinedAt     DateTime    @default(now()) @map("joined_at") @db.Timestamptz()
  visits       Visit[]
  achievements UserAchievement[]
  rank         Rank       @relation(fields: [rankId], references: [id])
  rankId       Int        @default(1)  @map("rank_id")
}

model Pizzeria {
  id           Int          @id @default(autoincrement())
  memberNumber Int?         @map("member_number")
  name         String
  nation       String
  address      String
  lat          Float
  lng          Float
  website      String?
  visits       Visit[]
}

model Visit {
  id           Int       @id @default(autoincrement())
  user         User      @relation(fields: [userId],    references: [id])
  userId       Int @map("user_id")
  pizzeria     Pizzeria  @relation(fields: [pizzeriaId], references: [id])
  pizzeriaId   Int  @map("pizzeria_id")
  rating       Int?
  description  String?
  visitedAt    DateTime @map("visited_at") @db.Timestamptz()
  timeZone     String

  @@unique([userId, pizzeriaId])
}

model Achievement {
  id    Int   @id  @default(autoincrement())
  code  String  @unique
  title String
  description String
  icon  String
  users UserAchievement[]
}

model UserAchievement {
  user User @relation(fields: [userId], references: [id])
  userId Int  @map("user_id")
  achievement Achievement @relation(fields: [achievementId], references: [id])
  achievementId Int @map("achievement_id")
  unlockedAt  DateTime @default(now()) @map("unlocked_at") @db.Timestamptz()

  @@id([userId, achievementId])
}

model Rank {
  id    Int    @id @default(autoincrement())
  code  String @unique
  name  String @unique
  color String
  icon  String
  users User[]

  @@map("ranks")
}
